
@model IEnumerable<Masjed.DomainClass.ActionMe>
@using Masjed.Models;
@{
    ViewBag.Title = "ReportIndex";
    Layout = "~/Areas/Farhangi/Views/Shared/_LayoutReportIndex.cshtml";
    int counter = 0;
    ApplicationDbContext db = new ApplicationDbContext();
}

<div class="container" style="direction:rtl">
    <h2 class="container" style="color:black;">امورفرهنگی پایگاه شهیدان عبداله دخت</h2>
</div>


<div class="col-lg-12">
    <div class="card-box" style="direction:rtl;">


        <table class="table table-bordered m-0 tbl">

            <thead>
                <tr>
                    <th>#</th>
                    <th>عنوان</th>
                    <th>تاریخ فعالیت</th>
                    <th>عکس</th>
                    
                
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    counter += 1;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Title</td>
                        <td>@item.DateCreate</td>
                        <td>
                            <img src="~/Content/Images/@item.Img"style="height:100px;width:150px; max-height:150px;max-width:150px;"  class="img-thumbnail" />
                         
                              @foreach (var itemGallery in db.Galleries.Where(x => x.ActionId == item.Id).Take(3))
                              {
                                <img src="~/Content/Images/@itemGallery.ImgMain" style="height:100px;width:150px; max-height:150px;max-width:150px;" class="img-thumbnail" />
                              }

                        </td>
                       
                    </tr>

                }


            </tbody>
        </table>

    </div>
</div>
