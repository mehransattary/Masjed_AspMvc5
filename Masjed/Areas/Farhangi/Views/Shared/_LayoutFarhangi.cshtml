
<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured Farhangi theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <!-- App Favicon -->
    <link rel="shortcut icon" href="~/Areas/Farhangi/assets/images/favicon.ico">

    <!-- App title -->
    <title>امورفرهنگی شهیدان عبداله دخت</title>
    <!-- App CSS -->
    @*@Styles.Render("~/Content/myFarhangicss")
        @Styles.Render("~/Content/myFarhangiDatePersiancss")*@
    <link href="~/Areas/Farhangi/assets/css/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="~/Areas/Farhangi/assets/css/core.css" rel="stylesheet" />
    <link href="~/Areas/Farhangi/assets/css/components.css" rel="stylesheet" />
    <link href="~/Areas/Farhangi/assets/css/icons.css" rel="stylesheet" />
    <link href="~/Areas/Farhangi/assets/css/pages.css" rel="stylesheet" />
    <link href="~/Areas/Farhangi/assets/css/menu.css" rel="stylesheet" />
    <link href="~/Areas/Farhangi/assets/css/responsive.css" rel="stylesheet" />
    <link href="~/Areas/Farhangi/assets/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.css" rel="stylesheet" />
   
    <link href="~/Areas/Farhangi/assets/css/MyCss.css" rel="stylesheet" />
    <script src="~/Areas/Farhangi/assets/js/modernizr.min.js"></script>
    <link href="~/Areas/Farhangi/assets/plugins/fileuploads/css/dropify.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Areas/Farhangi/assets/plugins/magnific-popup/dist/magnific-popup.css" />


</head>

@using Microsoft.AspNet.Identity.EntityFramework;
@using Masjed.Models;
@{

    var rm = new RoleManager<IdentityRole>(new RoleStore<IdentityRole>(new ApplicationDbContext()));
    var role = rm.FindByName("admin");
    bool result = User.IsInRole(role.Name);
}
<body class="fixed-left">

    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left" style="">
                <div class="container" style="direction:rtl;font-size:20px;">
                    @using Microsoft.AspNet.Identity
                    @if (Request.IsAuthenticated)
            {

                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                            @Html.AntiForgeryToken()
                            <ul class="nav navbar-nav navbar-right">
                                @if (result == true)
                                {
                                    <li style="margin-top:0px;">
                                        <div style="margin-top:0px;">  @Html.ActionLink("سلام " + "مدیرمحترم" + " " + User.Identity.GetUserName() + "!", "Index", "Default", new { Area = "Admin" }, htmlAttributes: new { title = "Manage" })</div>
                                    </li>
                                   
                                }
                                else
                                {
                                    <li style="margin-top:0px;">
                                        <div style="margin-top:0px;">  @Html.ActionLink("سلام " + "کاربرمحترم" + " " + User.Identity.GetUserName() + "!", "Index", "Default", routeValues: null, htmlAttributes: new { title = "Manage" })</div>
                                    </li>
                                  


                                }

                            </ul>
                        }
                    }
                    <!-- Right(Notification and Searchbox -->

                </div>

            </div>

            <!-- Button mobile view to collapse sidebar menu -->
            <div class="navbar navbar-default" role="navigation" style="">
                <div class="container">

                    <!-- Page title -->
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <button class="button-menu-mobile open-left">
                                <i class="zmdi zmdi-menu"></i>
                            </button>
                        </li>

                    </ul>
               
                </div><!-- end container -->
            </div><!-- end navbar -->
        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu" style="font-size: large;color:black">
            <div class="sidebar-inner slimscrollleft">

                <!-- User -->
                <div class="user-box">
               
                    <ul class="list-inline">
                        <li>
                            <a data-toggle="tooltip" title="خروج" data-placement="bottom" href="~/Account/LogOff" style="color:#333333"><span class="fa fa-sign-out fa-2x" style="color: #00ceff; "></span></a>

                        </li>
                        <li>
                            <a data-toggle="tooltip" title="صفحه اصلی سایت" data-placement="bottom" href="/" style="color:#333333"><span class="fa fa-eye fa-2x" style="color: #00ceff; "></span></a>
                        </li>
                        <li>
                            <a adata-toggle="tooltip" title="تغییررمزعبور" data-placement="bottom" href="~/Manage/ChangePassword" style="color:#333333"><span class="fa fa-key fa-2x" style="color: #00ceff; "></span></a>

                        </li>

                    </ul>

                </div>
                <!-- End User -->
                <!--- Sidemenu -->
                <div id="sidebar-menu" style="">
                    <ul>


                        <li class="has_sub">
                            <a href="/Farhangi/ApplicationUsers/index" class="waves-effect"><i class="zmdi zmdi-invert-colors" style="color: blue; "></i> <span>کاربران </span> <span class="menu-arrow"></span></a>

                        </li>

                        <li class="has_sub">
                            <a href="/Farhangi/ActionMes/index" class="waves-effect"><i class="zmdi zmdi-invert-colors" style="color: blue; "></i> <span>فعالیت ها </span> <span class="menu-arrow"></span></a>

                        </li>
                        <li class="has_sub">
                            <a href="/Farhangi/Bimes/index" class="waves-effect"><i class="zmdi zmdi-invert-colors" style="color: blue; "></i> <span> بیمه </span> <span class="menu-arrow"></span></a>

                        </li>
                        <li class="has_sub">
                            <a href="~/Account/Login" class="waves-effect"><i class="zmdi zmdi-invert-colors" style="color: blue; "></i> <span> ورود </span> <span class="menu-arrow"></span></a>

                        </li>





                    </ul>
                    <div class="clearfix"></div>
                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">

            <div class="content" style="">

                <div class="container">

                    <div class="row">
                        @RenderBody()
                    </div>
                    <!-- End row -->

                </div> <!-- container -->

            </div> <!-- content -->

            <footer class="footer">
                امورفرهنگی پایگاه شهیدان عبداله دخت ©.
            </footer>

        </div>
        <!-- End content-page -->
        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->


    </div>
    <!-- END wrapper -->



    <script>
        var resizefunc = [];
    </script>
    <script src="~/Areas/Farhangi/assets/js/jquery.min.js"></script>
    <script src="~/Areas/Farhangi/assets/js/bootstrap-rtl.min.js"></script>
    <script src="~/Areas/Farhangi/assets/js/detect.js"></script>
    <script src="~/Areas/Farhangi/assets/js/fastclick.js"></script>
    <script src="~/Areas/Farhangi/assets/js/jquery.slimscroll.js"></script>
    <script src="~/Areas/Farhangi/assets/js/jquery.blockUI.js"></script>
    <script src="~/Areas/Farhangi/assets/js/waves.js"></script>
    <script src="~/Areas/Farhangi/assets/js/jquery.nicescroll.js"></script>
    <script src="~/Areas/Farhangi/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/Areas/Farhangi/assets/js/jquery.core.js"></script>
    <script src="~/Areas/Farhangi/assets/js/jquery.app.js"></script>
    <script src="~/Areas/Farhangi/assets/MdBootstrapPersianDateTimePicker/jquery.Bootstrap-PersianDateTimePicker.js"></script>
    <script src="~/Areas/Farhangi/assets/MdBootstrapPersianDateTimePicker/jalaali.js"></script>


    <!-- isotope filter plugin -->
    <script type="text/javascript" src="~/Areas/Farhangi/assets/plugins/isotope/dist/isotope.pkgd.min.js"></script>

    <!-- Magnific popup -->
    <script type="text/javascript" src="~/Areas/Farhangi/assets/plugins/magnific-popup/dist/jquery.magnific-popup.min.js"></script>


    @RenderSection("scripts", false)
</body>
</html>




